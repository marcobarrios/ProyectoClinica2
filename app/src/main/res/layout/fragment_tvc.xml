                        android:layout_weight="1"
                        android:text="@string/referencia_its" />
                    </LinearLayout> -->


            <!-- <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_main_test"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawSelectorOnTop="true"
                    android:text="@string/main_test"
                    android:layout_marginTop="10dp" />

            </LinearLayout> -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_main_huella_tvc"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/fingerprint"
                    android:drawSelectorOnTop="true"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                    android:layout_marginTop="1dp"
                    android:text="@string/main_huella"
                    android:id="@+id/textView"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="18dp">

        <Button
            android:id="@+id/btn_main_guardar_tvc"
            android:layout_gravity="bottom|end"
            android:background="@drawable/floating_button_save_normal"
            android:textColor="@color/list_divider"
            android:drawSelectorOnTop="true"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>

</RelativeLayout>

