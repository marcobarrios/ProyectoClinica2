<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtTituloOpenActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_activity"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btn_continueOpenActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_dark"
        android:textColor="@color/list_divider"
        android:layout_marginTop="15dp"
        android:text="Continuar registrando" />

    <Button
        android:id="@+id/btn_closeOpenActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_dark"
        android:textColor="@color/list_divider"
        android:layout_marginTop="15dp"
        android:text="Cerrar actividad" />

</LinearLayout>
